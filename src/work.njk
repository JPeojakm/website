{% extends '_templates/base.njk' %}

{% block page_title %}Work{% endblock %}

{% block page_description %}Some practices for data journalism{% endblock %}

{% block content %}
<div class="works-intro">
  <h1>My Projects</h1>
  <p>A few of my selected works and projects. </p>
</div>

<div class="works-sections">
 <!-- Data and Graphics -->
<section class="data-graphics">
  <h2>Data and Graphics</h2>
  <div class="container-fluid">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-3">
      {% for dataviz in portfolio.dataviz %}
        <div class="col">
          <div class="card text-dark card-has-bg click-col" style="background-image:url('img/data-viz-photo/{{ dataviz.filename }}');">
            <img class="card-img d-none" src="img/data-viz-photo/{{ dataviz.filename }}" alt="{{ dataviz.title }}">
            <div class="card-img-overlay d-flex flex-column">
              <div class="card-body">
                <small class="card-meta mb-2">{{ dataviz.publication }}</small>
                <h4 class="card-title mt-0">
                  <a href="dataviz/{{ dataviz.slug }}.html" class="text-dark">{{ dataviz.title }}</a>
                </h4>
                <small><i class="far fa-clock"></i> {{ dataviz.time }}</small>
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>


  <!-- Cartography Projects -->
<section class="cartography-projects">
  <h2>Cartography Projects</h2>
  <div class="container-fluid">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-3">
       {% for map in portfolio.maps %}
          <div class="col">
            <div class="card text-dark card-has-bg click-col" style="background-image:url('img/maps-photo/{{ map.image }}.jpg');">
              <img src="img/maps-photo/{{ map.image }}.jpg" class="card-img d-none" alt="{{ map.title }}">
              <div class="card-img-overlay d-flex flex-column">
                <div class="card-body">
                  <small class="card-meta mb-2">Cartography</small>
                  <h4 class="card-title mt-0">
                    <a href="maps/{{ map.slug }}.html" class="text-dark">{{ map.title }}</a>
                  </h4>
                </div>
              </div>
            </div>
          </div>
       {% endfor %}
    </div>
  </div>
</section>

<!-- Interaction Design -->
<section class="interaction-design">
  <h2>Interaction Design</h2>
  <div class="container-fluid">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-3">
      <div class="col">
        <div class="card text-dark card-has-bg click-col" style="background-image:url('img/musicapp_img/banner.png');">
          <img src="img/musicapp_img/banner.jpg" class="card-img d-none" alt="Music App">
          <div class="card-img-overlay d-flex flex-column">
            <div class="card-body">
              <small class="card-meta mb-2">Interaction Design</small>
              <h4 class="card-title mt-0">
                <a href="Musicapp.html" class="text-dark">Music App</a>
              </h4>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


<!-- Writing and Notes -->
<section class="writing-notes">
  <h2>Writings</h2>
  <div class="container-fluid">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
       {% for writing in home.writing %}
        <div class="col">
          <div class="card text-dark card-has-bg click-col" style="background-image:url('img/writing-photo/{{ writing.image }}');">
            <img src="img/writing-photo/{{ writing.image }}" class="card-img d-none" alt="{{ writing.title }}">
            <div class="card-img-overlay d-flex flex-column">
              <div class="card-body">
                <small class="card-meta mb-2">Writings</small>
                <h4 class="card-title mt-0">
                  <a href="{{ writing.source }}" class="text-dark">{{ writing.name }}</a>
                </h4>
              </div>
            </div>
          </div>
        </div>
       {% endfor %}
    </div>
  </div>
</section>
</div>
{% endblock %}
